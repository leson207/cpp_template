{
    // Prefer Shift+F5 cause use F5 call a cmake build
    // Use IntelliSense to learn about possible attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with LLDB",
            "type": "lldb-dap",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": ["--foo", "Hello", "--bar", "world!"],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "env": {
                // "PATH": "${env:PATH}:${command:cmake.launchTargetDirectory}",
                "LD_LIBRARY_PATH": "${command:cmake.launchTargetDirectory}:${env:LD_LIBRARY_PATH}"
            },
            "initCommands": [
                "settings set stop-line-count-before 3",
                "settings set stop-line-count-after 3",
                
                "settings set target.process.thread.step-avoid-regexp std::",
                "settings set stop-disassembly-display never",
                "settings set frame-format \"frame #${frame.index}: ${frame.pc} ${module.file.basename}`${function.name-with-args}\\n\"",
                "settings set prompt \"(lldb) \"",
                "settings set auto-confirm true"
            ],
            "console": "externalTerminal"
        }
    ]
}