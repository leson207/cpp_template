{
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "clangd.onConfigChanged": "restart",
    "clangd.path": "/usr/bin/clangd",
    "clangd.arguments": [
        "--enable-config",

        "-j=8",
        "--pch-storage=memory",
        "--background-index-priority=background",
        
        "--pretty",
        "--log=info",
        "--clang-tidy",
        "--completion-parse=always",
        "--completion-style=bundled",
        "--experimental-modules-support",
    ],  // https://manpages.debian.org/unstable/clangd-21/clangd-21.1.en.html
    "files.associations": {
        ".clangd": "yaml",
        ".clang-tidy": "yaml",
        ".clang-format": "yaml"
    },
    "cmake.debugConfig": {
        "type": "lldb-dap"
    }
}