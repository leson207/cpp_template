{
    "clangd.onConfigChanged": "restart",
    "clangd.arguments": [
        "--enable-config",

        "--compile-commands-dir=build/debug",
        "--background-index",
        "-pretty",
        "-j=8",

        "--clang-tidy",
        "--completion-style=detailed",
        "--header-insertion=iwyu",
    ],
    "files.associations": {
        ".clangd": "yaml",
        ".clang-tidy": "yaml",
        ".clang-format": "yaml"
    },
    "cmake.debugConfig": {
        "type": "lldb-dap",
    },
}