{
    "clangd.onConfigChanged": "restart",
    "clangd.arguments": [
        "--enable-config",
        "--compile-commands-dir=build/Debug",
        
        "--pch-storage=memory",
        "--background-index",
        "--background-index-priority=background",
        "-j=8",
        
        "--all-scopes-completion",
        "--limit-results=500",
        
        "--log=info",
        "-pretty",

        "--clang-tidy",
        "--completion-style=bundled",
        "--header-insertion=iwyu"
    ],
    "files.associations": {
        ".clangd": "yaml",
        ".clang-tidy": "yaml",
        ".clang-format": "yaml"
    },
    "cmake.debugConfig": {
        "type": "lldb-dap"
    }
}